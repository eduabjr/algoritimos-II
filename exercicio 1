#include <stdio.h>

// declaração da estrutura 'pessoa' que contém três atributos: peso, idade e altura
typedef struct {
    double peso;  // atributo para armazenar o peso da pessoa
    int idade;    // atributo para armazenar a idade da pessoa
    double altura; // atributo para armazenar a altura da pessoa
} pessoa;


// função que imprime os atributos de pessoa
void imprimePessoa(pessoa p) {
    // imprime o peso, a idade e a altura da pessoa com duas casas decimais para o peso e altura
    printf("Peso: %.2lf. Idade: %d. Altura: %.2lf.\n\n", p.peso, p.idade, p.altura);
}

// função principal
int main() {
    pessoa pessoas[5], p1; // vetor de 5 pessoas e  variável p1
    // atributos do array
    pessoas[0].peso = 80.6;
    pessoas[0].idade = 40;
    pessoas[0].altura = 1.70;

    // copia os dados da 1 pessoa para a variável p1
    p1 = pessoas[0];

    // verifica se p1 é maior que 20
    if (p1.idade > 20) {
        p1.idade++; // incrementa a idade em 1 se a condição for verdadeira
    }

    // copia os dados da 1 pessoa para a 2 posição do array
    pessoas[1] = pessoas[0];

    // imprime os dados da pessoa p1
    imprimePessoa(p1);
    // imprime os dados da primeira pessoa no array
    imprimePessoa(pessoas[0]);
    // imprime os dados da segunda pessoa no array
    imprimePessoa(pessoas[1]);

    // tenta imprimir os dados das posições não inicializadas do array (pessoas[2], pessoas[3], pessoas[4])
    // o que resultará em dados não definidos, pois não foram inicializados
    imprimePessoa(pessoas[2]);
    imprimePessoa(pessoas[3]);
    imprimePessoa(pessoas[4]);

    return 0; // encerra o programa
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////
Além disso, refaça o código, criando uma função que permite ao usuário digitar todos os dados
do vetor pessoas[].

#include <stdio.h>

// estrutura que representa uma pessoa, com seus atributos: nome, idade e altura
typedef struct {
    char nome[50];  // Array de caracteres para armazenar o nome
    int idade;      // Idade da pessoa (número inteiro)
    double altura; // Altura da pessoa (número de ponto flutuante)
} pessoa;

// imprime os dados de uma pessoa
void imprimePessoa(pessoa p) {
    printf("Nome: %s, Idade: %d, Altura: %.2f\n", p.nome, p.idade, p.altura);
}

int main() {
    // Vetor que armazena 5 pessoas
    pessoa pessoas[5], p1;

    // Lê os dados de 5 pessoas
    for (int i = 0; i < 5; i++) {
        printf("Digite o nome, idade e altura da pessoa %d:\n", i+1);
        scanf("%s %d %lf", pessoas[i].nome, &pessoas[i].idade, &pessoas[i].altura);
    }

    // Imprime os dados das pessoas
    printf("\nDados das pessoas:\n");
    for (int i = 0; i < 5; i++) {
        imprimePessoa(pessoas[i]);
    }

    return 0;
}
