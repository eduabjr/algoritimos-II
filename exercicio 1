#include <stdio.h>

int primo(int num) {
    // Um número primo é divisível apenas por 1 e por ele mesmo.
    if (num <= 1) {
        return 0; // Não é primo
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0; // Não é primo
        }
    }
    return 1; // É primo
}

int somaPrimos(int n) {
    int count = 0, num = 2, soma = 0;
    while (count < n) {
        if (primo(num)) {
            soma += num;
            count++;
        }
        num++;
    }
    return soma;
}

int main() {
    int n;
    printf("Digite a quantidade de números primos: ");
    scanf("%d", &n);

    int resultado = somaPrimos(n);
    printf("A soma dos %d primeiros números primos é: %d\n", n, resultado);

    return 0;
}
