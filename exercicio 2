#include <stdio.h>

int main() {
    int n, i, j;

    printf("Digite o tamanho da matriz: ");
    scanf("%d", &n);

    int matriz[n][n];

    for (i = 0; i < n; i++) {
        for (j = 0; j <= i; j++) {
            matriz[i][j] = j + 1;
        }
        for (j = i + 1; j < n; j++) {
            matriz[i][j] = 0;
        }
    }


    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }

    return 0;
}
