#include <stdio.h>

int encontrarMaior(int vetor[], int tamanho) {
    int maior = vetor[0]; 
    int posicao = 0;

    for (int i = 1; i < tamanho; i++) {
        if (vetor[i] > maior) {
            maior = vetor[i];
            posicao = i;
        }
    }

    return posicao; 
}

int main() {
    int tamanho, maior, posicao;

    printf("Digite o tamanho do vetor: ");
    scanf("%d", &tamanho);

    int vetor[tamanho];

    printf("Digite os valores do vetor:\n");
    for (int i = 0; i < tamanho; i++) {
        scanf("%d", &vetor[i]);
    }

    posicao = encontrarMaior(vetor, tamanho);
    maior = vetor[posicao];

    printf("O maior valor eh: %d\n", maior);
    printf("A posicao do maior valor eh: %d\n", posicao);

    return 0;
}
